{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: aarch64-linux-gnu-g++ compila il file attivo",
			"command": "/usr/bin/aarch64-linux-gnu-g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"*.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-lsfml-graphics",
				"-lsfml-system",
				"-lsfml-window"

			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compilatore: /usr/bin/aarch64-linux-gnu-g++"
		}
	]
}